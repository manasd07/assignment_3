{
  "name": "e-commerce",
  "version": "1.0.0",
  "description": "E-commerce based backend application",
  "main": "dist/src/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "scripts": {
    "prebuild": "npm run format",
    "build": "tsc",
    "pre-commit": "lint-staged",
    "prestart": "npm run build",
    "start": "nodemon ./src/index.ts --exec ts-node babel-node dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "author": "Manas Dwivedi",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "express": "^4.17.1",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "typeorm": "^0.2.34",
    "typescript": "^4.3.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "prettier": "^2.3.1"
  }
}
